<Window x:Class="VanDerWaerdenGame.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="1000">
    <Window.Resources>
        <Style x:Key="DotStyle" TargetType="Ellipse" >
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Fill" Value="Blue"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
            <Ellipse Style="{StaticResource DotStyle}" />
        </StackPanel>
        
    </Grid>
</Window>
    
